---
import { Image } from "astro:assets";
import bannerImage from "../assets/banner.png";
import kurmaImage from "../assets/kurma.png";
---

<section class="relative h-screen w-full overflow-hidden">
  <!-- <Image
    src={bannerImage}
    alt="background"
    class="absolute inset-0 h-full w-full object-cover animate-slow-zoom hidden md:block"
    quality="max"
  /> -->
  <Image
    src={bannerImage}
    widths={[240, 540, 720, 1080, bannerImage.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${bannerImage.width}px`}
    alt="background"
    class="absolute inset-0 h-full w-full object-cover animate-slow-zoom"
  />
  <div
    class="absolute z-10 inset-0 flex flex-col md:flex-row justify-center items-center"
  >
    <Image
      src={kurmaImage}
      alt="kurma banner"
      loading="eager"
      fetchpriority="high"
      class="w-xs"
    />
    <div class="wrap-tagline w-3/4 md:w-fit">
      <h3
        class="text-5xl md:text-8xl font-bold font-handwrite text-[#161511] drop-shadow-[0_-2PX_2px_#FFFFFF]"
      >
        Temukan
      </h3>
      <div class="flex flex-wrap justify-start items-baseline gap-5">
        <h1
          class="font-arabic text-6xl md:text-9xl drop-shadow-[0_-2px_2px_#FFFFFF] font-bold text-[#161511]"
        >
          Kurmamu
        </h1>
        <button data-scroll-to="premium-product">
          <h3
            class="text-3xl md:text-5xl font-black font-arabic text-[#161511] drop-shadow-[0_-2PX_2px_#FFFFFF] hover:cursor-pointer hover:[text-shadow:0_0_15px_#fcbe21]"
          >
            di Sini
          </h3>
        </button>
      </div>
      <h4
        class="text-3xl font-black font-arabic text-[#161511] drop-shadow-[0_-2PX_2px_#FFFFFF]"
      >
        tempatnya kurma-kurma pilihan dan berkualitas
      </h4>
    </div>
  </div>
</section>

<style>
  /* Membuat animasi custom */

  @keyframes slowZoom {
    0% {
      transform: scale(1.2);
    }
    100% {
      transform: scale(1);
    }
  }

  .animate-slow-zoom {
    /* background-color: #fcbe21; */
    /* Animasi berjalan selama 10 detik agar halus, sekali jalan, dan tertahan di skala akhir */
    animation: slowZoom 10s ease-out forwards;
  }
</style>
