---
import { Icon } from "astro-icon/components";

const { title, description } = Astro.props;
---

<div class="max-w-md mx-auto space-y-4">
  <details class="group border-b border-gray-200 pb-4">
    <summary
      class="flex justify-between items-center cursor-pointer list-none py-4"
    >
      <span
        class="text-xl font-bold text-[#2c2923] hover:text-[#fcbe21] transition-colors"
      >
        {title}
      </span>
      <Icon
        name="lucide:chevron-down"
        class="w-6 h-6 text-[#fcbe21] transition-transform duration-500 group-open:rotate-180"
      />
    </summary>

    <div
      class="grid grid-rows-[0fr] transition-[grid-template-rows] duration-500 ease-in-out group-open:grid-rows-[1fr]"
    >
      <div class="overflow-hidden">
        <p class="text-gray-600 leading-relaxed pt-2 text-justify">
          {description}
        </p>
      </div>
    </div>
  </details>
</div>
